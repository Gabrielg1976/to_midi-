<% form_for([current_user,@song]) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.label :composed_by %><br />
    <%= f.text_field :composed_by %>
  </p>
  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>